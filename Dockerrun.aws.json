{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"maukas/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name":"server",
            "image":"maukas/multi-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"maukas/multi-worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"maukas/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}